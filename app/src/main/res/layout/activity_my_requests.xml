<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyRequests"
    android:padding="15sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginTop="20sp"
        android:text="Select Category"
        android:layout_gravity="center"
        android:layout_marginBottom="50sp"
        ></TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginBottom="10sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/background_gradiant"
            android:id="@+id/medical"
            android:layout_marginEnd="5sp"
            android:layout_weight="50.0"
            >
            <ImageView
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/ic_medical"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requested For"
                android:layout_marginTop="5sp"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Patient"
                android:layout_marginTop="5sp"
                android:textSize="20sp"
                android:layout_marginBottom="10sp"></TextView>

        </LinearLayout>>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/background_gradiant"
            android:layout_marginStart="5sp"
            android:id="@+id/event"
            android:layout_weight="50.0">

            <ImageView
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/ic_event"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requested For"
                android:layout_marginTop="5sp"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Events"
                android:layout_marginTop="5sp"
                android:textSize="20sp"
                android:layout_marginBottom="10sp"></TextView>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="12sp"
        android:layout_marginBottom="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="33.33">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_gradiant"
                android:clickable="true"
                android:layout_marginEnd="3sp"
                android:id="@+id/blood"
                android:layout_weight="50">

                <ImageView
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/ic_blood_drop1"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requested"
                    android:layout_marginTop="5sp"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bloods"
                    android:layout_marginTop="5sp"
                    android:textSize="20sp"
                    android:layout_marginBottom="10sp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_gradiant"
                android:clickable="true"
                android:layout_marginEnd="2sp"
                android:layout_marginStart="2sp"
                android:id="@+id/cloth"
                android:layout_weight="50">

                <ImageView
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/ic_shirt"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requested"
                    android:layout_marginTop="5sp"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloths"
                    android:layout_marginTop="5sp"
                    android:textSize="20sp"
                    android:layout_marginBottom="10sp"></TextView>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/background_gradiant"
            android:clickable="true"
            android:layout_marginStart="2sp"
            android:id="@+id/food"
            android:layout_weight="66.67">
            <ImageView
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/ic_turkey"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requested"
                android:layout_marginTop="5sp"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foods"
                android:layout_marginTop="5sp"
                android:textSize="20sp"
                android:layout_marginBottom="10sp"></TextView>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>