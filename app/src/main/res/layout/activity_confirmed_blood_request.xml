<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmedBloodRequest"
    android:orientation="vertical"
    android:padding="20sp"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donor User ID"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"></TextView>


    <EditText
        android:id="@+id/donorName"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40sp"
        android:layout_marginVertical="10sp"
        android:gravity="center"
        android:background="@drawable/blue_squre_shape"
        android:textSize="18sp"></EditText>


    <Button
        android:id="@+id/button"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:background="@drawable/rounded_button"></Button>


</LinearLayout>