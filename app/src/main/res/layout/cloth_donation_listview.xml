<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/ic_shirt"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="TextView0"
            android:id="@+id/textView"
            android:gravity="center"></TextView>
    </LinearLayout>>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_map"></ImageView>
            <TextView
                android:gravity="center"
                android:text="TextView1"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/textView1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_address"></ImageView>
            <TextView
                android:gravity="center"
                android:text="TextView2"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView1"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_user1"></ImageView>

            <TextView
                android:gravity="center"
                android:text="TextView3"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/textView3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_call1"></ImageView>

            <TextView
                android:gravity="center"
                android:text="TextView4"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
