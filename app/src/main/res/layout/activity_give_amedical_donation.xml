<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GiveAMedicalDonation"
    android:padding="5sp"
    android:layout_marginVertical="10sp">

    <ListView
        android:id="@+id/medicalListViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/listviewdivider"
        android:dividerHeight="5sp"
        android:listSelector="@color/colorPrimaryDark">
    </ListView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        >
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:id="@+id/fabFour"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/ic_user1"
            app:backgroundTint="@color/colorPrimary"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:id="@+id/fabThree"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/ic_donate"
            app:backgroundTint="@color/colorPrimary"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:id="@+id/fabTwo"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/ic_money_hand"
            app:backgroundTint="@color/colorPrimary"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:id="@+id/fabOne"
            android:layout_margin="4dp"
            app:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_logout1"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:tint="@android:color/white"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/ic_add_black_24dp"
            app:backgroundTint="@color/colorPrimary"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>